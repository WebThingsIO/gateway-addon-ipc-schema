{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/mozilla-iot/gateway-addon-ipc-schema/master/messages/outlet-added-notification.json",
  "title": "Outlet Added Notification",
  "description": "Notification that a new outlet has been added to a notifier",
  "type": "object",
  "required": [
    "messageType",
    "data"
  ],
  "properties": {
    "messageType": {
      "type": "integer",
      "title": "Message Type",
      "description": "The message type, used by the IPC client and server to differentiate messages",
      "const": 16384
    },
    "data": {
      "type": "object",
      "title": "Message Data",
      "description": "Message-specific data",
      "required": [
        "pluginId",
        "notifierId",
        "outlet"
      ],
      "properties": {
        "pluginId": {
          "type": "string",
          "title": "Plugin ID",
          "description": "ID of the plugin"
        },
        "notifierId": {
          "type": "string",
          "title": "Notifier ID",
          "description": "ID of the notifier"
        },
        "outlet": {
          "type": "object",
          "title": "Outlet",
          "description": "Description of the outlet"
        }
      }
    }
  }
}
