{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/mozilla-iot/gateway-addon-ipc-schema/master/messages/mock-adapter-add-device-response.json",
  "title": "Mock Adapter Add Device Response",
  "description": "Notice that the mock adapter has finished adding a new device",
  "type": "object",
  "required": [
    "messageType",
    "data"
  ],
  "properties": {
    "messageType": {
      "type": "integer",
      "title": "Message Type",
      "description": "The message type, used by the IPC client and server to differentiate messages",
      "const": 61441
    },
    "data": {
      "type": "object",
      "title": "Message Data",
      "description": "Message-specific data",
      "required": [
        "pluginId",
        "adapterId",
        "success"
      ],
      "properties": {
        "pluginId": {
          "type": "string",
          "title": "Plugin ID",
          "description": "ID of the plugin"
        },
        "adapterId": {
          "type": "string",
          "title": "Adapter ID",
          "description": "ID of the adapter"
        },
        "success": {
          "type": "boolean",
          "title": "Success",
          "description": "Whether or not the operation was successful"
        },
        "deviceId": {
          "type": "string",
          "title": "Device ID",
          "description": "ID of the new device"
        },
        "error": {
          "type": "string",
          "title": "Error",
          "description": "Error message in the case of failure"
        }
      }
    }
  }
}
