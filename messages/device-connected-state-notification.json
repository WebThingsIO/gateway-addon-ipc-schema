{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/mozilla-iot/gateway-addon-ipc-schema/master/messages/device-connected-state-notification.json",
  "title": "Device Connected State Notification",
  "description": "Notification that the connected state has changed for a device",
  "type": "object",
  "required": [
    "messageType",
    "data"
  ],
  "properties": {
    "messageType": {
      "type": "integer",
      "title": "Message Type",
      "description": "The message type, used by the IPC client and server to differentiate messages",
      "const": 8197
    },
    "data": {
      "type": "object",
      "title": "Message Data",
      "description": "Message-specific data",
      "required": [
        "pluginId",
        "adapterId",
        "deviceId",
        "connected"
      ],
      "properties": {
        "pluginId": {
          "type": "string",
          "title": "Plugin ID",
          "description": "ID of the plugin"
        },
        "adapterId": {
          "type": "string",
          "title": "Adapter ID",
          "description": "ID of the adapter"
        },
        "deviceId": {
          "type": "string",
          "title": "Device ID",
          "description": "ID of the device"
        },
        "connected": {
          "type": "boolean",
          "title": "Connected",
          "description": "Whether or not the device is currently connected"
        }
      }
    }
  }
}
