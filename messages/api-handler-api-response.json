{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/mozilla-iot/gateway-addon-ipc-schema/master/messages/api-handler-api-response.json",
  "title": "API Handler API Response",
  "description": "Response message from an API handler request",
  "type": "object",
  "required": [
    "messageType",
    "data"
  ],
  "properties": {
    "messageType": {
      "type": "integer",
      "title": "Message Type",
      "description": "The message type, used by the IPC client and server to differentiate messages",
      "const": 20484
    },
    "data": {
      "type": "object",
      "title": "Message Data",
      "description": "Message-specific data",
      "required": [
        "pluginId",
        "packageName",
        "messageId",
        "response"
      ],
      "properties": {
        "pluginId": {
          "type": "string",
          "title": "Plugin ID",
          "description": "ID of the plugin"
        },
        "packageName": {
          "type": "string",
          "title": "Package Name",
          "description": "Name of the add-on package"
        },
        "messageId": {
          "type": "integer",
          "title": "Message ID",
          "description": "ID of the request message"
        },
        "response": {
          "type": "object",
          "title": "Response",
          "description": "Outgoing response",
          "required": [
            "status",
            "contentType",
            "content"
          ],
          "properties": {
            "status": {
              "type": "integer",
              "title": "Status",
              "description": "HTTP status code"
            },
            "contentType": {
              "title": "Content Type",
              "description": "Content-Type of the response body",
              "oneOf": [
                {"type": "null"},
                {"type": "string"}
              ]
            },
            "content": {
              "title": "Content",
              "description": "Body content",
              "oneOf": [
                {"type": "null"},
                {"type": "string"}
              ]
            }
          }
        }
      }
    }
  }
}
