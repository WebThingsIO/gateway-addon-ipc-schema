{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/mozilla-iot/gateway-addon-ipc-schema/master/messages/device-remove-action-request.json",
  "title": "Device Remove Action Request",
  "description": "Remove/cancel an existing action from a device",
  "type": "object",
  "required": [
    "messageType",
    "data"
  ],
  "properties": {
    "messageType": {
      "type": "integer",
      "title": "Message Type",
      "description": "The message type, used by the IPC client and server to differentiate messages",
      "const": 8202
    },
    "data": {
      "type": "object",
      "title": "Message Data",
      "description": "Message-specific data",
      "required": [
        "pluginId",
        "adapterId",
        "messageId",
        "deviceId",
        "actionName",
        "actionId"
      ],
      "properties": {
        "pluginId": {
          "type": "string",
          "title": "Plugin ID",
          "description": "ID of the plugin"
        },
        "adapterId": {
          "type": "string",
          "title": "Adapter ID",
          "description": "ID of the adapter"
        },
        "messageId": {
          "type": "integer",
          "title": "Message ID",
          "description": "Unique ID of this message"
        },
        "deviceId": {
          "type": "string",
          "title": "Device ID",
          "description": "ID of the device"
        },
        "actionName": {
          "type": "string",
          "title": "Action Name",
          "description": "Name of the action"
        },
        "actionId": {
          "type": "string",
          "title": "Action ID",
          "description": "ID of the existing action"
        }
      }
    }
  }
}
