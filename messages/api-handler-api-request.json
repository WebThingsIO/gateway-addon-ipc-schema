{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/mozilla-iot/gateway-addon-ipc-schema/master/messages/api-handler-api-request.json",
  "title": "API Handler API Request",
  "description": "Handler an incoming API request",
  "type": "object",
  "required": [
    "messageType",
    "data"
  ],
  "properties": {
    "messageType": {
      "type": "integer",
      "title": "Message Type",
      "description": "The message type, used by the IPC client and server to differentiate messages",
      "const": 20483
    },
    "data": {
      "type": "object",
      "title": "Message Data",
      "description": "Message-specific data",
      "required": [
        "pluginId",
        "packageName",
        "messageId",
        "request"
      ],
      "properties": {
        "pluginId": {
          "type": "string",
          "title": "Plugin ID",
          "description": "ID of the plugin"
        },
        "packageName": {
          "type": "string",
          "title": "Package Name",
          "description": "Name of the add-on package"
        },
        "messageId": {
          "type": "integer",
          "title": "Message ID",
          "description": "Unique ID of this message"
        },
        "request": {
          "type": "object",
          "title": "Request",
          "description": "Incoming request",
          "required": [
            "method",
            "path",
            "query",
            "body"
          ],
          "properties": {
            "method": {
              "type": "string",
              "title": "Method",
              "description": "HTTP method of the request"
            },
            "path": {
              "type": "string",
              "title": "Path",
              "description": "Request path, relative to this handler"
            },
            "query": {
              "type": "object",
              "title": "Query",
              "description": "Query parameters from URL"
            },
            "body": {
              "type": "object",
              "title": "Body",
              "description": "Parsed parameters from the body"
            }
          }
        }
      }
    }
  }
}
