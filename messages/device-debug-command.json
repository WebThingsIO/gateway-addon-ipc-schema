{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/mozilla-iot/gateway-addon-ipc-schema/master/messages/device-debug-command.json",
  "title": "Device Debug Command",
  "description": "Perform a debug command on a device",
  "type": "object",
  "required": [
    "messageType",
    "data"
  ],
  "properties": {
    "messageType": {
      "type": "integer",
      "title": "Message Type",
      "description": "The message type, used by the IPC client and server to differentiate messages",
      "const": 8206
    },
    "data": {
      "type": "object",
      "title": "Message Data",
      "description": "Message-specific data",
      "required": [
        "pluginId",
        "adapterId",
        "deviceId",
        "cmd",
        "params"
      ],
      "properties": {
        "pluginId": {
          "type": "string",
          "title": "Plugin ID",
          "description": "ID of the plugin"
        },
        "adapterId": {
          "type": "string",
          "title": "Adapter ID",
          "description": "ID of the adapter"
        },
        "deviceId": {
          "type": "string",
          "title": "Device ID",
          "description": "ID of the device"
        },
        "cmd": {
          "type": "string",
          "title": "Command",
          "description": "Name of the command"
        },
        "params": {
          "title": "Params",
          "description": "Input to the command",
          "$ref": "definitions.json#/definitions/any"
        }
      }
    }
  }
}
